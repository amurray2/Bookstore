@model Book
@*This just brings in the different books that are available*@
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card" style="width: 23rem;" id="card">
                <div class="card-body badge-light">
                    <h5 class="card-title">
                        @Model.Title
                        <span class="badge badge-primary" style="float:right">
                            <p class="">$@Model.Price</p>
                        </span>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.AuthFirstName @Model.AuthMiddleName @Model.AuthLastName</li>
                    <li class="list-group-item">Publisher: @Model.Publisher</li>
                    @if (Model.Fiction)
                    {
                        <li class="list-group-item">Fiction @Model.Category</li>
                    }
                    else
                    {
                        <li class="list-group-item">Non-Fiction @Model.Category</li>
                    }
                    <li class="list-group mt-2 mb-2 text-center">
                        <form id="@Model.BookId" asp-page="/Purchase" method="post">
                            <input type="hidden" asp-for="BookId" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                            <span class="card-text p-1">
                                <button type="submit" class="btn-success btn-sm">Add to Cart</button>
                            </span>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-6 align-self-center">
            <div class="card" style="width: 15rem; visibility:hidden;" id="card2-@Model.BookId">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.ISBN</li>
                    <li class="list-group-item">@Model.NumberPages Pages</li>
                </ul>
            </div>
        </div>
    </div>
</div>

