@model Book

@*This just brings in the different books that are available*@
<div class="col-6">
    <div class="card" style="width: 23rem;" id="card" onmouseover="myFunction(@Model.BookId)" onmouseout="myFunction2(@Model.BookId)">
        <div class="card-body badge-light">
            <h5 class="card-title">@Model.Title</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.AuthFirstName @Model.AuthMiddleName @Model.AuthLastName</li>
            <li class="list-group-item">$@Model.Price</li>
            @if (Model.Fiction)
            {
                <li class="list-group-item">Fiction @Model.Category</li>
            }
            else
            {
                <li class="list-group-item">Non-Fiction @Model.Category</li>
            }
        </ul>
    </div>
</div>
<div class="col-6 align-self-center">
    <div class="card" style="width: 15rem; visibility:hidden;" id="card2-@Model.BookId">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Publisher: @Model.Publisher</li>
            <li class="list-group-item">@Model.ISBN</li>
            <li class="list-group-item">@Model.NumberPages Pages</li>
        </ul>
    </div>
</div>
